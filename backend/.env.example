# Yang Wen-li Backend Configuration
# Copy this file to .env and update values as needed

# Database
# Path to SQLite database (relative to backend directory)
DATABASE_PATH=RUBLI_NORMALIZED.db

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8001
DEBUG=false

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3009,http://127.0.0.1:3009

# Rate Limiting
# Requests per minute for expensive endpoints
RATE_LIMIT_EXPENSIVE=5
RATE_LIMIT_DEFAULT=100

# Data Validation Thresholds (MXN)
MAX_CONTRACT_VALUE=100000000000
FLAG_THRESHOLD=10000000000

# Query Timeout (seconds)
DB_QUERY_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
